{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": true,
    "extends": [
        "config:best-practices",
        "group:githubArtifactActions"
    ],
    "packageRules": [
        {
            "addLabels": [
                "gh-actions",
                "dependencies"
            ],
            "description": "Add gh-actions and dependencies labels to GitHub Action dependency updates",
            "matchManagers": [
                "github-actions"
            ],
            "semanticCommitScope": "gh-actions-deps"
        },
        {
            "addLabels": [
                "python",
                "dependencies"
            ],
            "description": "Add python and dependencies labels to Python dependency updates",
            "matchManagers": [
                "poetry",
                "pip_requirements"
            ],
            "semanticCommitScope": "python-deps"
        },
        {
            "description": "Group all non-production Python updates together",
            "groupName": "python-dev-deps",
            "matchDepTypes": [
                "!dependencies"
            ],
            "matchManagers": [
                "poetry",
                "pep621"
            ]
        },
        {
            "description": "Group all Github Actions/Workflow updates together",
            "groupName": "gh-actions",
            "matchManagers": [
                "github-actions"
            ]
        }
    ],
    "platformCommit": "enabled",
    "prHourlyLimit": 5
}
